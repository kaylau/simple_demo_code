<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 若不设置 gravity，则 Indicator 宽度会填满整个 item -->
    <item
        android:gravity="center_horizontal"
        android:left="5dp"
        android:right="5dp">
        <shape>
            <corners
                android:radius="3dp" />
            <size
                android:width="30dp"
                android:height="5dp" />
        </shape>
    </item>

</layer-list>